<%= form.error_messages %>

<p>
  <%= form.label :title %><br />
  <%= form.text_field :title %>
</p>
<p>
  <%= form.label :note %><br />
  <%= form.text_area :note %>
</p>
<p>
  <%= form.label :due_by %><br />
  <%= form.datetime_select :due_by %>
</p>
